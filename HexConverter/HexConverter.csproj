<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<AssemblyVersion>1.2.*</AssemblyVersion>
		<Deterministic>false</Deterministic>
		<ApplicationIcon>IconMain.ico</ApplicationIcon>
		<Title>AK Hex Converter</Title>
		<Authors>Alex Kravchenko and contributors</Authors>
		<Copyright>Alex Kravchenko and contributors</Copyright>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="IconMain.ico" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\.editorconfig" Link=".editorconfig" />
		<None Include="..\LICENSE.txt" Link="LICENSE.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>